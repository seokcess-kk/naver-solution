# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_DATABASE=naver_place_monitor

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_required
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=10

# Redis (Optional for Phase 7)
REDIS_HOST=localhost
REDIS_PORT=6379

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Application
PORT=3000
NODE_ENV=development

# Naver Scraping Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
NAVER_SCRAPING_DELAY=2000
NAVER_REVIEW_SCRAPING_LIMIT=10

# Firecrawl API (for improved web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_API_URL=https://api.firecrawl.dev/v1
